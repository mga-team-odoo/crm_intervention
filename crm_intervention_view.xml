<?xml version="1.0"?>
<openerp>
    <data>

        # ------------------------------------------------------ 
        # Interventions
        # ------------------------------------------------------ 

        <record model="ir.ui.view" id="crm_case_form_view_inter">
            <field name="name">CRM - Interventions Form</field>
            <field name="model">crm.case</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Interventions">
                    <group colspan="4" col="7">
                        <field name="name" select="1" string="Subject" colspan="2" attrs="{'readonly':[('state','=','done')]}"/>
                        <field name="number_request" required="1" select="1" string="Reference" colspan="1" attrs="{'readonly':[('state','=','done')]}"/>
                        <field name="section_id" colspan="1" invisible="False"/>
                        <newline/>
                        <label string="Stage :" align="1.0"/>
                        <group colspan="1" col="2">
                            <field name="stage_id" select="1" nolabel="1"/>
                            <button icon="gtk-go-forward" string="" name="stage_next" type="object"/>
                        </group>
                        <field name="partner_id" on_change="onchange_partner_intervention_id(partner_id)" required="1" select="1" attrs="{'readonly':[('state','=','done')]}"/>
                        <field name="user_id" select="2" string="Planned for" colspan="1" attrs="{'readonly':[('state','=','done')]}"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Customer contact">
                            <field domain="[('partner_id','=',partner_id)]" name="partner_order_id" required="1" attrs="{'readonly':[('state','=','done')]}"/>
                            <field domain="[('partner_id','=',partner_id)]" name="partner_invoice_id" required="1" attrs="{'readonly':[('state','=','done')]}"/>
                            <field domain="[('partner_id','=',partner_id)]" name="partner_shipping_id" required="1" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="partner_phone" required="0" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="partner_mobile" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="email_from" widget="email" attrs="{'readonly':[('state','=','done')]}"/>
                        </page>
                        <page string="Description">
                            <field name="canal_id" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="priority" string="Priority" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="date" string="Planned start date" colspan="1" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="duration" on_change="onchange_planned_duration(duration,date)" string="Planned hours" widget="float_time" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="planned_end_date" on_change="onchange_planned_end_date(planned_end_date,date)" select="2" colspan="1" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="categ_id" select="1" on_change="onchange_categ_id(categ_id)" string="Location" required="0" attrs="{'readonly':[('state','=','done')]}"/>
                            <separator colspan="2" string="Description Information"/>
                            <separator colspan="2" string="Internal Information"/>
                            <field name="note" nolabel="1" colspan="2" required="0" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="internal_note" nolabel="1" colspan="2" attrs="{'readonly':[('state','=','done')]}"/>
                            <separator colspan="4" string="References"/>
                            <field colspan="4" name="ref" attrs="{'readonly':[('state','=','done')]}"/>

                        </page>

                        <page string="Feedback">
                            <group expand="1">
                                <field name="effective_start_date" colspan="1" attrs="{'readonly':[('state','=','done')]}"/>
                                <field name="effective_duration" on_change="onchange_effective_duration(effective_duration,effective_start_date)" widget="float_time" attrs="{'readonly':[('state','=','done')]}"/>
                                <field name="effective_end_date" on_change="onchange_planned_end_date(effective_end_date,effective_start_date)" select="2" colspan="1" attrs="{'readonly':[('state','=','done')]}"/>
                                <field name="email_cc" attrs="{'readonly':[('state','=','done')]}"/>
                                <separator string="Customer" colspan="2"/>
                                <separator string="Internal" colspan="2"/>
                                <field name="category2_id" select="1" string="Gratification" attrs="{'readonly':[('state','=','done')]}"/>
                                <field name="som" attrs="{'readonly':[('state','=','done')]}"/>
                                <field name="description" string="Customer" colspan="2" nolabel="1" attrs="{'readonly':[('state','=','done')]}"/>
                                <field name="internal_comment" string="Internal" colspan="2" nolabel="1" attrs="{'readonly':[('state','=','done')]}"/>
                                <button name="case_log" string="For Customer" states="open" type="object" colspan="2"/>
                                <button name="case_internal_log" string="In Internal" states="open" type="object" colspan="2"/>
                                <separator colspan="4" string="References"/>
                                <field colspan="4" name="ref2"/>
                            </group>

                            <separator colspan="4"/>
                            <group col="8" colspan="4">
                                <field name="state" select="2" readonly="1"/>
                                <button name="case_pending" string="Pending" states="open" type="object"/>
                                <button name="case_open" string="Open" states="draft,pending" type="object"/>
                                <button name="case_close" string="Close" states="draft,open,pending" type="object"/>
                            </group>
                        </page>
                        <page string="History Feedback">
                            <field name="history_line" colspan="2" nolabel="1" mode="tree,form" domain="[('types','=','default')]">
                                <tree string="Previous Feedback Customer">
                                    <field name="date"/>
                                    <field name="user_id"/>
                                    <field name="description" string="Text"/>
                                </tree>
                            </field>
                            <field name="internal_history" colspan="2" nolabel="1" mode="tree,form" domain="[('types','=','internal')]">
                                <tree string="Previous Feedback Internal">
                                    <field name="date"/>
                                    <field name="user_id"/>
                                    <field name="description" string="Text"/>
                                </tree>
                            </field>

                        </page>

                        <page string="History">
                            <separator colspan="4" string="Dates"/>
                            <field name="create_date"/>
                            <field name="date_closed"/>
                            <field name="date_action_last"/>
                            <field name="date_action_next"/>
                            <field name="log_ids" nolabel="1" colspan="4">
                                <form string="Actions">
                                    <separator string="Action Information" colspan="4"/>
                                    <field name="name" colspan="4"/>
                                    <field name="date"/>
                                    <field name="user_id"/>
                                    <field name="som"/>
                                    <field name="canal_id"/>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="crm_case_tree_view_inter">
            <field name="name">CRM - Interventions Tree</field>
            <field name="model">crm.case</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Interventions Tree" colors="blue:state=='open';grey:state=='done';red:state=='pending'">
                    <field name="number_request"/>
                    <field name="name" string="Interventions"/>
                    <field name="partner_id" string="Partner"/>
                    <field name="user_id" string="Planned for"/>
                    <field name="date" string="Planned start date"/>
                    <field name="planned_end_date"/>
                    <field name="duration" string="Planned hours" widget="float_time"/>
                    <field name="categ_id" string="Location"/>
                    <field name="stage_id"  string="Stage"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="crm_case_calendar_view_inter">
            <field name="name">CRM - Interventions Calendar</field>
            <field name="model">crm.case</field>
            <field name="type">calendar</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <calendar string="Interventions" date_start="date" color="user_id" date_delay="duration">
                    <field name="number_request"/>
                    <field name="partner_id"/>
                    <field name="categ_id" string="Location"/>
                </calendar>
            </field>
        </record>
    </data>
</openerp>
